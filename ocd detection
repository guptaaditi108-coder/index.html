  <script>
    // Very simple scoring: sum 5 items (0-4) => total 0-20
    // Provide a basic interpretation:
    // 0-4 : Unlikely / Minimal
    // 5-9 : Mild — keep an eye
    // 10-14 : Moderate — consider professional advice
    // 15-20 : High — seek professional support
    (function(){
      const form = document.getElementById('screenForm');
      const submit = document.getElementById('submitBtn');
      const reset = document.getElementById('resetBtn');
      const resultArea = document.getElementById('resultArea');

      function getScore(){
        let total = 0;
        for(let i=1;i<=5;i++){
          const vals = form['q'+i];
          if(!vals) return null;
          let found=false;
          if (vals.length === undefined) {
            // single input
            const v = vals.value;
            if(v === '') return null;
            total += Number(v);
            found=true;
          } else {
            for(const opt of vals){
              if(opt.checked){
                total += Number(opt.value);
                found=true;
                break;
              }
            }
          }
          if(!found) return null;
        }
        return total;
      }

      function interpret(score){
        if(score <= 4) return {text: 'Minimal or no signs (score '+score+').', level:'low'};
        if(score <= 9) return {text: 'Mild — some symptoms present (score '+score+'). Consider self-help strategies and monitoring.', level:'mild'};
        if(score <= 14) return {text: 'Moderate — symptoms are more prominent (score '+score+'). Consider reaching out to a mental health professional for assessment.', level:'moderate'};
        return {text: 'High — significant symptoms (score '+score+'). Strongly consider seeking professional help soon.', level:'high'};
      }

      submit.addEventListener('click', ()=>{
        const score = getScore();
        if(score === null){
          resultArea.hidden = false;
          resultArea.style.border = '1px solid #fde68a';
          resultArea.innerHTML = '<strong>Please answer all 5 questions.</strong>';
          return;
        }
        const info = interpret(score);
        resultArea.hidden = false;
        // style based on level
        if(info.level === 'low'){
          resultArea.style.border = '1px solid #bbf7d0';
          resultArea.innerHTML = '<strong style="color:var(--success)">Result:</strong> ' + info.text +
            '<div class="small" style="margin-top:8px">If you want, track symptoms over several weeks and show to a clinician if they change.</div>';
        } else if(info.level === 'mild' || info.level === 'moderate'){
          resultArea.style.border = '1px solid #fce7a9';
          resultArea.innerHTML = '<strong style="color:var(--warning)">Result:</strong> ' + info.text +
            '<div class="small" style="margin-top:8px">Self-help (structured routines, limiting reassurance-seeking, breathing/relaxation) can help. Consider consultation if symptoms persist or impair life.</div>';
        } else {
          resultArea.style.border = '1px solid rgba(239,68,68,0.15)';
          resultArea.innerHTML = '<strong style="color:rgb(239,68,68)">Result:</strong> ' + info.text +
            '<div class="small" style="margin-top:8px">If you are in crisis or feel unable to cope, contact emergency services or a mental health professional immediately.</div>';
        }
      });

      reset.addEventListener('click', ()=>{
        form.reset();
        resultArea.hidden = true;
      });

      // small enhancement: highlight selected labels visually (works by CSS adjacent selector)
      // no further JS needed.
    })();
  </script>
</body>
